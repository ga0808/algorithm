def solution(num):
    i = 1
    
    if num ==1:
        return 0
    
    while i <= 500:
        if num%2 == 0:
            num = num/2
        elif num%2 != 0:
            num = (num*3)+1
        if num == 1:
            break
        i += 1
        
    if i == 501:
        i = -1
    
    return i
